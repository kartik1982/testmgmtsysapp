<%= render 'shared/errors', obj: @testsuite %>

<div class="container">
  <div class="row center-align add-user">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h5 class="header"><%= @testsuite.new_record? ? "ADD NEW TESTSUITE" : "EDIT TESTSUITE" %></h5>
        <div class="row">
          <%= form_for(@testsuite, html: {class: "col s12"}) do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :title, class: "form-control", placeholder: "Name of the Testsuite", autofocus: true %>
              <%= f.label :title, "Testsuite Name" %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
                <%= f.text_area :description, class: "materialize-textarea", placeholder: "Description for Testcase" %>
                <%= f.label :description %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <%= f.collection_select :user_id, ::User.all, :id, :email, {prompt: "Choose Assignee name"} %>
              <%= f.label :user_id, "Assignee To" %>
            </div>
            <div class="input-field col s6">
              <%= f.collection_select :project_id, ::Project.all, :id, :title, {prompt: "Choose Assignee name"} %>
              <%= f.label :project_id, "Assignee To" %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
                <%= f.text_area :comment, class: "materialize-textarea", placeholder: "comment" %>
                <%= f.label :comment %>
            </div>
          </div>
          <label>
            <%= f.check_box :runmode, class: "filled-in" %>
            <span> Testsuite Run Mode</span>
          </label>
         <div class="row">
           <div class="input-field col s12">
            <%= f.button(@testsuite.new_record? ? "Add Testsuite" : "Update Testsuite", class: "btn orange waves-effect waves-light right") %>
          </div>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
