<div class="row">
  <div class="col s12 m12">
    <!-- <div class="card"> -->
      <h4>Testsuite Name: <%= @testsuite.title %> </h4>
      <p>Description: <%= @testsuite.description %></p>
    <!-- </div> -->
  </div>
  <%= link_to '<i class="material-icons right">create</i> Edit'.html_safe, edit_testsuite_path(@testsuite), class: "btn waves-effect waves-light" %>
  <%= link_to '<i class="material-icons right">delete_forever</i> Delete'.html_safe, testsuite_path(@testsuite), method: :delete, data: {confirm: "Are you sure?"}, class: "btn waves-effect waves-light" %>
</div>
<div class="row">
  <div class="col s12 offset-s0">
      <table class="striped">
        <thead>
          <tr>
              <th>Testcase Name</th>
              <th>Description</th>
              <th>Created by</th>
              <th>Assigned To</th>
              <th>Created On</th>
              <th>Updated On</th>
          </tr>
        </thead>
        <tbody>
          <% @testsuite.testcases.each do |testcase| %>
              <td><%= link_to testcase.title, testcase_path(testcase) %> </td>
              <td><%= truncate(testcase.description, length:50) %></td>
              <td><%= testcase.user.first_name+" "+testcase.user.last_name if testcase.user%></td>
              <td>Kartik Aiyar</td>
              <td><%= testcase.created_at.to_date %></td>
              <td><%= testcase.updated_at.to_date %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
