<%= render 'shared/errors', obj: @group %>

<div class="container">
  <div class="row center-align add-user">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h5 class="header"> <%= @group.new_record? ? "ADD NEW GROUP" : "EDIT GROUP" %></h5>
        <div class="row">
          <%= form_for(@group, html: {class: "col s12"}) do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :title, class: "form-control", placeholder: "Group Name", autofocus: true %>
              <%= f.label :title, "Group Name" %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
                <%= f.text_area :description, class: "materialize-textarea", placeholder: "Description for Group" %>
                <%= f.label :description %>
            </div>
          </div>
          <label>
            <%= f.check_box :active, class: "filled-in", checked: "checked" %>
            <span>Group Status</span>
          </label>
         <div class="row">
           <div class="input-field col s12">
            <%= f.button(@group.new_record? ? "Add Group" : "Update Group", class: "btn orange waves-effect waves-light right") %>
          </div>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
