<div class="row">
  <div class="col s12 m12">
    <div class="card-panel">
      <div class="row header center">
      <h6><b>RELEASE DETAILS</b></h6>
    </div>
    <div class="row">
      <div class="col s12 m12">
        <b>VERSION:</b>&emsp;<%= @release.title %>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m12">
        <b>DESCRIPTION:</b> <%= @release.description %>
      </div>
    </div>
    <div class="row">
      <div class="col s6 m6">
        <b>CREATED BY:</b>&emsp;<%= @release.user.email %>
      </div>
      <div class="col s6 m6">
        <b>UPDATED BY:</b>&emsp;<%= @release.updated_by %>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m12">
        <b>STATUS:</b> </b>&emsp;<%=@release.active? ? "Active" : "Disabled" %>
      </div>
    </div>
      <%= link_to '<i class="material-icons right">create</i> Edit'.html_safe, edit_release_path(@release), class: "btn waves-effect waves-light" %>
      <%= link_to '<i class="material-icons right">delete_forever</i> Delete'.html_safe, release_path(@release), method: :delete, data: {confirm: "Are you sure?"}, class: "btn waves-effect waves-light" %>
      <%= link_to '<i class="material-icons left">list</i> List Releases'.html_safe, releases_path, class: "btn waves-effect waves-light right" %>
    </div>

    <table class="striped">
      <thead>
        <tr>
            <th>Project</th>
            <th>Description</th>
            <th>Status</th>
            <th>Created By</th>
            <th>Updated By</th>
            <th>Created On</th>
            <th>Updated On</th>
        </tr>
      </thead>
      <tbody>
        <% @release.projects.each do |project| %>
            <tr>
            <td><%= link_to project.title.gsub('_','.'), project_path(project) %></td>
            <td><%= truncate(project.description, length:50) %></td>
            <td><%= project.active? ? "Active" : "Disabled" %></td>
            <td><%= project.user.first_name+" "+project.user.last_name if project.user %></td>
            <td><%= project.updated_by%></td>
            <td><%= project.created_at.to_date %></td>
            <td><%= project.updated_at.to_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
