<div class="row">
  <div class="col s12 m12">
    <div class="card-panel">
      <div class="row header center">
      <h6><b>PROJECT DETAILS</b></h6>
    </div>
    <div class="row">
      <div class="col s8 m8">
        <b>NAMER:</b>&emsp;<%= @project.title %>
      </div>
      <div class="col s4 m4">
        <b>Total Testsuites:</b>&emsp;<%= @project.testsuites.count %>
    </div>
    </div>
    <div class="row">
      <div class="col s12 m12">
        <b>DESCRIPTION:</b> <%= @project.description %>
      </div>
    </div>
    <div class="row">
      <div class="col s6 m6">
        <b>CREATED BY:</b>&emsp;<%= @project.user.email %>
      </div>
      <div class="col s6 m6">
        <b>UPDATED BY:</b>&emsp;<%= @project.updated_by %>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m12">
        <b>STATUS:</b> </b>&emsp;<%=@project.active? ? "Active" : "Disabled" %>
      </div>
    </div>
      <%= link_to '<i class="material-icons right">create</i> Edit'.html_safe, edit_project_path(@project), class: "btn waves-effect waves-light" %>
      <%= link_to '<i class="material-icons right">delete_forever</i> Delete'.html_safe, project_path(@project), method: :delete, data: {confirm: "Are you sure?"}, class: "btn waves-effect waves-light" %>
      <%= link_to '<i class="material-icons left">list</i> List Projects'.html_safe, projects_path, class: "btn waves-effect waves-light right" %>
    </div>
    <table class="striped">
      <thead>
        <tr>
            <th>Release</th>
            <th>Description</th>
            <th>Created By</th>
            <th>Updated By</th>
            <th>Created On</th>
            <th>Updated On</th>
        </tr>
      </thead>
      <tbody>
        <% @project.testsuites.each do |testsuite| %>
            <tr>
            <td><%= link_to testsuite.title, testsuite_path(testsuite) %></td>
            <td><%= truncate(testsuite.description, length:50) %></td>
            <td><%= testsuite.user.first_name+" "+testsuite.user.last_name if testsuite.user %></td>
            <td><%= testsuite.updated_by%></td>
            <td><%= testsuite.created_at.to_date %></td>
            <td><%= testsuite.updated_at.to_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
