<div class="row">
  <div class="col s12 m12">
    <!-- <div class="card"> -->
      <h4>Testcase Name: <%= @testcase.title %> </h4>
      <p>Description: <%= @testcase.description %></p>
      <h5>Testsuite Name: <%=@testcase.testsuite.title if @testcase.testsuite %>
    <!-- </div> -->
  </div>
  <%= link_to '<i class="material-icons right">create</i> Edit'.html_safe, edit_testcase_path(@testcase), class: "btn waves-effect waves-light" %>
  <%= link_to '<i class="material-icons right">delete_forever</i> Delete'.html_safe, testcase_path(@testcase), method: :delete, data: {confirm: "Are you sure?"}, class: "btn waves-effect waves-light" %>

</div>
