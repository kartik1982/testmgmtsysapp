<div class="row center-align add-user">
  <div class="col s12 m12 l12">
    <div class="card-panel">
      <h5 class="header"><b>TESTCYCLES LIST</b></h5>
        <div class="row">
          <table class="striped">
            <thead>
              <tr>
                  <th>Testcycle Name</th>
                  <th>Description</th>
                  <th>Status</th>
                  <th>Created By</th>
                  <th>Updated By</th>
                  <th>Created On</th>
                  <th>Updated On</th>
              </tr>
            </thead>
            <tbody>
              <% @testcycles.each do |testcycle| %>
                  <tr>
                  <td><%= link_to testcycle.title, testcycle_path(testcycle) %></td>
                  <td><%= truncate(testcycle.description, length:50) %></td>
                  <td><%= testcycle.active? ? "Active" : "Diabled" %></td>
                  <td><%=testcycle.user.first_name+" "+testcycle.user.last_name if testcycle.user %></td>
                  <td>Kartik Aiyar</td>
                  <td><%= testcycle.created_at.to_date %></td>
                  <td><%= testcycle.updated_at.to_date %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
