<div class="row">
  <div class="col s12 m12">
    <div class="card-panel">
      <div class="row header center">
      <h6><b>DEVICE DETAILS</b></h6>
    </div>
    <div class="row">
      <div class="col s6 m6">
        <b>NAME:</b>&emsp;<%= @device.title %>
      </div>
      <div class="col s6 m6">
        <b>SERIAL:</b>&emsp;<%= @device.serial %>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m12">
        <b>DESCRIPTION:</b> <%= @device.description %>
      </div>
    </div>
    <div class="row">
      <div class="col s4 m4">
        <b>TYPE:</b>&emsp;<%= @device.device_type %>
      </div>
      <div class="col s4 m4">
        <b>REAL DEVICE:</b>&emsp;<%= @device.device_real? ? "Real Device" : "Fake Device" %>
      </div>
      <div class="col s4 m4">
        <b>TELNET:</b>&emsp;<%= @device.device_telnet? ? "TRUE" : "FALSE" %>
      </div>
    </div>
    <%= link_to '<i class="material-icons right">create</i> Edit'.html_safe, edit_device_path(@device), class: "btn waves-effect waves-light" %>
    <%= link_to '<i class="material-icons right">delete_forever</i> Delete'.html_safe, device_path(@device), method: :delete, data: {confirm: "Are you sure?"}, class: "btn waves-effect waves-light" %>
    <%= link_to '<i class="material-icons left">list</i> List Devices'.html_safe, devices_path, class: "btn waves-effect waves-light right" %>
    </div>
  </div>
</div>
