<% if @device.errors.any? %>
<div class="container">
  <div class="row release-form">
    <div class="col s12 m12 l12">
      <div class="card-panel red light">
        <span class="white-text">
        <strong><%= pluralize(@device.errors.count, "error") %></strong>
        Prohibited Group being created
         <ul>
           <% @device.errors.full_messages.each do |message| %>
           <li><%= message%></li>
           <% end %>
         </ul>
        <% end %>
      </span>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row center-align add-user">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h5 class="header">ADD NEW DEVICE</h5>
        <div class="row">
          <%= form_for(@device, html: {class: "col s12"}) do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :title, class: "form-control", placeholder: "Device Name", autofocus: true %>
              <%= f.label :title, "Device Name" %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :serial, class: "form-control", placeholder: "Device Serial Number", autofocus: true %>
              <%= f.label :serial, "Device Serail Number" %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
                <%= f.text_area :description, class: "materialize-textarea", placeholder: "Description for Device" %>
                <%= f.label :description %>
            </div>
          </div>
          <label>
            <%= f.check_box :active, class: "filled-in", checked: "checked" %>
            <span>Device Status</span>
          </label>
         <div class="row">
           <div class="input-field col s12">
            <%= f.submit "Add Device", class: "btn orange waves-effect waves-light right" %>
          </div>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
